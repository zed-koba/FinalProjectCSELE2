            <VerticalStackLayout>
                <Button
                    TextColor="White"
                    FontAttributes="None"
                    FontSize="14"
                    CornerRadius="12"
                    Text="Wanna rot?"
                    Margin="0,0,0,15"
                    BackgroundColor="#232226"/>
