<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginRegistration.View.Homepage"
             Title="Homepage" BackgroundColor="#121312">
    <Grid RowDefinitions="Auto, *" RowSpacing="20" Padding="25,25,25,25">
        <!-- Header -->
        <FlexLayout JustifyContent="SpaceAround" AlignItems="Center">
            <Label
                                FontFamily="OpenSansSemibold"
                                Text="Rots"
        FlowDirection="LeftToRight"
                
                                FontSize="24"
                                TextColor="White"
                                FontAttributes="Bold">
            </Label>
            <Image
                Source="logo.png"
                Aspect="AspectFill"
                WidthRequest="54"
                HeightRequest="57"/>
            <Label
                FontFamily="OpenSansSemibold"
                Text="Profile"
                TextColor="White"
                FontSize="24"
                FontAttributes="Bold">
            </Label>
        </FlexLayout>

        <!-- Post Section -->
