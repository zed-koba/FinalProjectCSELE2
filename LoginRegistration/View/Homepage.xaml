                                Text="&#xF141;"
                                TextColor="White"
                                VerticalTextAlignment="Center"
                                FontSize="24"/>
                        </FlexLayout>
                        <Frame
                            Background="Black"
                            Margin="-15,0,-15,0"
                            CornerRadius="0"
                            BorderColor="Transparent"
                            HeightRequest="131"
                            Padding="0">
