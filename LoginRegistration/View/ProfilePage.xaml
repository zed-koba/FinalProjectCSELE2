<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginRegistration.View.ProfilePage"
             Title="ProfilePage">
    <ScrollView>
        <VerticalStackLayout Spacing="10" Padding="10">
            <!-- Profile Section -->
            <Grid RowDefinitions="Auto, Auto, Auto" ColumnDefinitions="Auto, *">
                <!-- Avatar -->
                <Image Source="avatar.png" 
                       HeightRequest="60" WidthRequest="60" 
                       Aspect="AspectFill" 
                       HorizontalOptions="Center" 
                       VerticalOptions="Center" 
                       Margin="0,0,10,0" 
                       Grid.RowSpan="3" />

                <!-- Name -->
                <Label Text="Tralalelo Tralala..." 
                       FontSize="20" 
                       TextColor="White" 
                       Grid.Column="1" 
                       Grid.Row="0" 
                       FontAttributes="Bold" />

                <!-- Username -->
                <Label Text="@tralalelotralala" 
                       FontSize="14" 
                       TextColor="#808080" 
                       Grid.Column="1" 
                       Grid.Row="1" />

                <!-- Stats -->
                <Grid ColumnDefinitions="*, *, *" 
                      RowDefinitions="Auto, Auto" 
                      Grid.Column="1" 
                      Grid.Row="2">
                    <Label Text="18,123" 
                           FontSize="16" 
                           TextColor="White" 
                           Grid.Column="0" 
                           Grid.Row="0" />
                    <Label Text="Posts" 
                           FontSize="12" 
                           TextColor="#808080" 
                           Grid.Column="0" 
                           Grid.Row="1" />

                    <Label Text="103" 
                           FontSize="16" 
                           TextColor="White" 
                           Grid.Column="1" 
                           Grid.Row="0" />
                    <Label Text="ambot" 
                           FontSize="12" 
                           TextColor="#808080" 
                           Grid.Column="1" 
                           Grid.Row="1" />

                    <Label Text="154,981" 
                           FontSize="16" 
                           TextColor="White" 
                           Grid.Column="2" 
                           Grid.Row="0" />
                    <Label Text="likes" 
                           FontSize="12" 
                           TextColor="#808080" 
                           Grid.Column="2" 
                           Grid.Row="1" />
                </Grid>
            </Grid>

            <!-- New Post Button -->
            <Button Text="new post +" 
                    BackgroundColor="Red" 
                    TextColor="White" 
                    CornerRadius="5" 
                    HorizontalOptions="FillAndExpand" 
                    Margin="0,10,0,0" />

            <!-- Posts Grid -->
            <CollectionView ItemsSource="{Binding Posts}" 
                            ItemSizingStrategy="MeasureAllItems">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="0" 
                               HasShadow="False" 
                               BackgroundColor="Transparent">
                            <Image Source="{Binding ImageUrl}" 
                                   Aspect="AspectFill" 
                                   HeightRequest="100" 
                                   WidthRequest="100" />
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>