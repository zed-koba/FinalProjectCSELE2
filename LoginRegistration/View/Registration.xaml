<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginRegistration.View.Registration"
             Title="Registration"
             BackgroundColor="#111216">
    
    <VerticalStackLayout Spacing="30" Padding="25,50,25,25">
        <HorizontalStackLayout Spacing="20" VerticalOptions="Center">
            <Image
             Source="logo.png"
             Aspect="AspectFill"
             WidthRequest="74"
             HeightRequest="80"/>
            <Label
             Text="Create an Account"
             FontSize="24"
             FontAttributes="Bold"
             VerticalOptions="Center"
             VerticalTextAlignment="Center"
             TextColor="White"
             />
        </HorizontalStackLayout>
        <Label Text="Fill out the details"
            FontSize="16"
            TextColor="White"/>
        <VerticalStackLayout Spacing="10">
            <Frame
             BackgroundColor="#1F1E29"
             CornerRadius="5"
             BorderColor="Transparent"
             Margin="0"
             Padding="0">
                <HorizontalStackLayout>
                    <Label
                     Text="&#xE801;"
                     FontFamily="FontelloFamily"
                     HorizontalTextAlignment="Center"
                     VerticalTextAlignment="Center"
                     FontSize="16"
                     WidthRequest="61"
                     TextColor="White"
                     />
                    <Entry
                     x:Name="txtName"
                     Placeholder="Name"
                     PlaceholderColor="#666666"
                     HeightRequest="55"
                     HorizontalOptions="FillAndExpand"
                     TextColor="White"
                     FontSize="12"
                     Margin="-12,0,0,0"
                     
                     />
                </HorizontalStackLayout>
            </Frame>
            <Frame
             BackgroundColor="#1F1E29"
             CornerRadius="5"
             BorderColor="Transparent"
             Margin="0"
             Padding="0">
                <HorizontalStackLayout>
                    <Label
                     Text="&#xE801;"
                     FontFamily="FontelloFamily"
                     HorizontalTextAlignment="Center"
                     VerticalTextAlignment="Center"
                     FontSize="16"
                     WidthRequest="61"
                     TextColor="White"
                     />
                    <Entry
                     x:Name="txtUsername"
                     Placeholder="Username"
                     PlaceholderColor="#666666"
                     HeightRequest="55"
                     HorizontalOptions="FillAndExpand"
                     TextColor="White"
                     FontSize="12"
                     Margin="-12,0,0,0"
                     />
                </HorizontalStackLayout>
            </Frame>
            <Frame
             BackgroundColor="#1F1E29"
             CornerRadius="5"
             BorderColor="Transparent"
             Margin="0"
             Padding="0">
                <HorizontalStackLayout>
                    <Label
                     Text="&#xE800;"
                     FontFamily="FontelloFamily"
                     HorizontalTextAlignment="Center"
                     VerticalTextAlignment="Center"
                     FontSize="16"
                     WidthRequest="61"
                     TextColor="White"
                     />
                    <Entry
                     x:Name="txtPassword"
                     Placeholder="Password"
                     PlaceholderColor="#666666"
                     HeightRequest="55"
                     HorizontalOptions="FillAndExpand"
                     TextColor="White"
                     IsPassword="True"
                     FontSize="12"
                     Margin="-12,0,0,0"
                     />
                </HorizontalStackLayout>
            </Frame>
            <Frame
             BackgroundColor="#1F1E29"
             CornerRadius="5"
             BorderColor="Transparent"
             Margin="0"
             Padding="0">
                <HorizontalStackLayout>
                    <Label
                     Text="&#xE800;"
                     FontFamily="FontelloFamily"
                     HorizontalTextAlignment="Center"
                     VerticalTextAlignment="Center"
                     FontSize="16"
                     WidthRequest="61"
                     TextColor="White"
                     />
                    <Entry
                     x:Name="txtconfirmPass"
                     Placeholder="Confirm Password"
                     PlaceholderColor="#666666"
                     HeightRequest="55"
                     HorizontalOptions="FillAndExpand"
                     TextColor="White"
                     FontSize="12"
                     IsPassword="True"
                     Margin="-12,0,0,0"
                     />
                </HorizontalStackLayout>
            </Frame>
            <HorizontalStackLayout Spacing="-10">
                <CheckBox
                 IsChecked="False"
                 x:Name="AgreeCheckBox"
                 Color="#ff4654"
                 />
                <Label
                 Text="I agree to terms and condition"
                 FontSize="12"
                 FontAttributes="None"
                 TextColor="White"
                 VerticalOptions="Center"
                 VerticalTextAlignment="Center"
                 />
            </HorizontalStackLayout>
            <Button
             x:Name="createAccount"
             BackgroundColor="#ff4654"
             Text="Create Account"
             FontSize="16"
             FontAttributes="None"
             Clicked="createAccount_Clicked"/>
        </VerticalStackLayout>
        <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
            <Label
             Text="Already have an account?"
             TextColor="White"
             FontSize="14"/>
            <Label
             Text="Sign in"
             TextColor="#ff4654"
             FontSize="16"
             FontAttributes="Bold"
             TextDecorations="Underline"
             >
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
                </Label.GestureRecognizers>
            </Label>

        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentPage>