<?xml version="1.0" encoding="utf-8" ?>
<mopups:PopupPage
    x:Class="LoginRegistration.View.PostComment"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:anim="clr-namespace:Mopups.Animations;assembly=Mopups"
    xmlns:local="clr-namespace:LoginRegistration.Features"
    xmlns:mopups="clr-namespace:Mopups.Pages;assembly=Mopups"
    Title="PostComment"
    BackgroundColor="#121312">
    <ContentPage.Resources>
        <local:TimeStampConverter x:Key="UnixToTimeConverter" />
    </ContentPage.Resources>
    <mopups:PopupPage.Animation>
        <anim:MoveAnimation
            DurationIn="600"
            EasingIn="CubicIn"
            PositionIn="Bottom"
            PositionOut="Top" />
    </mopups:PopupPage.Animation>
    <Grid Padding="25,5,25,5" RowDefinitions="Auto, *, Auto">

        <VerticalStackLayout Spacing="10">
            <!--  Back to feed Button  -->
            <Frame
                Margin="0"
                Padding="5"
                BackgroundColor="#FB3137"
                BorderColor="Transparent"
                CornerRadius="5"
                HorizontalOptions="Start"
                WidthRequest="105">
                <HorizontalStackLayout Spacing="5">
                    <Label
                        FontFamily="FAsolid"
                        FontSize="16"
                        Text="&#xF104;"
                        TextColor="White"
                        VerticalTextAlignment="Center" />
                    <Label
                        FontSize="12"
                        Text="Back to feed"
                        TextColor="White"
                        VerticalTextAlignment="Center" />
                </HorizontalStackLayout>
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding closeCommentPost}" />
                </Frame.GestureRecognizers>
            </Frame>

            <!--  Post Section  -->
            <Frame
                Padding="0"
                BackgroundColor="#232226"
                BorderColor="Transparent"
                CornerRadius="12">
                <VerticalStackLayout Padding="10" Spacing="5">
                    <FlexLayout Padding="2,0,2,0" JustifyContent="SpaceBetween">
                        <HorizontalStackLayout Spacing="10">
                            <Image
                                Aspect="AspectFill"
                                HeightRequest="32"
                                Source="{Binding PostDetails.avatar}"
                                WidthRequest="32">
                                <Image.Clip>
                                    <RoundRectangleGeometry CornerRadius="16" Rect="0,0,32,32" />
                                </Image.Clip>
                            </Image>
                            <Label
                                FontAttributes="None"
                                FontSize="14"
                                Text="{Binding PostDetails.fullName}"
                                TextColor="White"
                                VerticalTextAlignment="Center" />
                        </HorizontalStackLayout>
                        <Label
                            FontFamily="FAsolid"
                            FontSize="24"
                            Text="&#xF141;"
                            TextColor="White"
                            VerticalTextAlignment="Center" />
                    </FlexLayout>
                    <Frame
                        Padding="0"
                        Background="Black"
                        BorderColor="Transparent"
                        CornerRadius="8"
                        HeightRequest="250">
                        <Image
                            Aspect="AspectFit"
                            HorizontalOptions="Center"
                            Source="{Binding PostDetails.Posts.imageSource}"
                            VerticalOptions="Center" />
                    </Frame>
                    <Label
                        FontSize="12"
                        Text="{Binding PostDetails.Posts.caption}"
                        TextColor="White"
                        VerticalOptions="StartAndExpand" />
                    <FlexLayout JustifyContent="SpaceBetween">
                        <HorizontalStackLayout Spacing="5">
                            <Label
                                FontFamily="{Binding PostDetails.iconFont}"
                                FontSize="24"
                                Text="&#xF004;"
                                TextColor="{Binding PostDetails.likeColor}"
                                VerticalTextAlignment="Center">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding likeAPost}" />
                                </Label.GestureRecognizers>
                            </Label>
                            <Label
                                FontSize="14"
                                Text="{Binding PostDetails.Posts.like.Count}"
                                TextColor="White"
                                VerticalTextAlignment="Center" />
                        </HorizontalStackLayout>
                        <Label
                            FontSize="14"
                            Text="{Binding PostDetails.Posts.timeStamp, Converter={StaticResource UnixToTimeConverter}}"
                            TextColor="#888888" />
                    </FlexLayout>
                </VerticalStackLayout>
            </Frame>
            <HorizontalStackLayout Spacing="2">
                <Label
                    FontAttributes="Bold"
                    FontSize="16"
                    Text="Comments"
                    TextColor="White" />
                <Label
                    FontAttributes="Bold"
                    FontSize="16"
                    Text="{Binding commentDetails.Count, StringFormat=' ({0})'}"
                    TextColor="#888888" />
            </HorizontalStackLayout>
        </VerticalStackLayout>

        <!--  Comment Section  -->
        <CollectionView Grid.Row="1" ItemsSource="{Binding commentDetails}">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout ItemSpacing="5" Orientation="Vertical" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <VerticalStackLayout Spacing="5">
                        <!--  Comment Card Preview  -->
                        <Frame
                            Padding="0"
                            BackgroundColor="#232226"
                            BorderColor="Transparent"
                            CornerRadius="8">
                            <Grid
                                Padding="10"
                                ColumnDefinitions="Auto, *"
                                ColumnSpacing="5">
                                <Image
                                    Aspect="AspectFill"
                                    HeightRequest="36"
                                    Source="{Binding avatar}"
                                    VerticalOptions="Start"
                                    WidthRequest="36">
                                    <Image.Clip>
                                        <RoundRectangleGeometry CornerRadius="18" Rect="0,0,36,36" />
                                    </Image.Clip>
                                </Image>
                                <VerticalStackLayout
                                    Grid.Column="1"
                                    Margin="5,0,0,0"
                                    Spacing="2">
                                    <FlexLayout JustifyContent="SpaceBetween">
                                        <Label
                                            FontAttributes="Bold"
                                            FontFamily="PoppinsMedium"
                                            FontSize="14"
                                            Text="{Binding fullName}"
                                            TextColor="White" />
                                        <Label
                                            FontFamily="PoppinsMedium"
                                            FontSize="14"
                                            Text="{Binding commentTimeStamp, Converter={StaticResource UnixToTimeConverter}}"
                                            TextColor="#888888" />
                                    </FlexLayout>
                                    <Label
                                        FontFamily="OpenSansSemibold"
                                        FontSize="14"
                                        Text="{Binding commentPost}"
                                        TextColor="White"
                                        VerticalOptions="StartAndExpand" />
                                </VerticalStackLayout>
                            </Grid>
                        </Frame>
                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Frame
            Grid.Row="2"
            Padding="0"
            BackgroundColor="Transparent"
            BorderColor="#888888"
            CornerRadius="12">
            <Grid
                Padding="12,8,12,8"
                ColumnDefinitions="*, Auto"
                ColumnSpacing="5">
                <Label
                    FontSize="14"
                    Text="Write a comment"
                    TextColor="#888888"
                    VerticalTextAlignment="Center" />
                <Button
                    Grid.Column="1"
                    Margin="0,0,5,0"
                    BackgroundColor="#FB3137"
                    CornerRadius="12"
                    FontSize="14"
                    Text="Rot"
                    TextColor="White"
                    VerticalOptions="Center"
                    WidthRequest="69" />
            </Grid>
            <Frame.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding showWriteComment}" />
            </Frame.GestureRecognizers>
        </Frame>
    </Grid>
</mopups:PopupPage>