<?xml version="1.0" encoding="utf-8" ?>
<mopups:PopupPage
    x:Class="LoginRegistration.View.OptionsPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:mopups="clr-namespace:Mopups.Pages;assembly=Mopups"
    Title="OptionsPopup"
    BackgroundColor="#80000000"
    CloseWhenBackgroundIsClicked="True">
    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
        <Frame
            Margin="0"
            Padding="0,20,0,20"
            BackgroundColor="#232226"
            BorderColor="Transparent"
            CornerRadius="12"
            HasShadow="True"
            VerticalOptions="StartAndExpand"
            WidthRequest="190">
            <VerticalStackLayout>
                <Button
                    BackgroundColor="#232226"
                    BorderColor="Transparent"
                    Command="{Binding deletePost}"
                    CornerRadius="0"
                    FontAttributes="Bold"
                    FontSize="16"
                    Text="Delete Post"
                    TextColor="White" />
                <Button
                    Margin="0,5,0,0"
                    BackgroundColor="#232226"
                    BorderColor="Transparent"
                    Command="{Binding showEditPosts}"
                    CornerRadius="0"
                    FontAttributes="Bold"
                    FontSize="16"
                    Text="Edit Post"
                    TextColor="White" />
            </VerticalStackLayout>
        </Frame>
    </VerticalStackLayout>
</mopups:PopupPage>