<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginRegistration.MainPage"
             BackgroundColor="#111216">

    <VerticalStackLayout Padding="25,25,25,25" VerticalOptions="Center">
        <Image
        Source="logo.png"
        Aspect="AspectFit"
        HeightRequest="108"
        WidthRequest="104"
        HorizontalOptions="Center"/>
        <Label
        Text="Welcome"
        FontFamily="OpenSansSemibold"
        FontSize="36"
        HorizontalOptions="Center"
        TextColor="White"
        />
        <Label
        Text="Login to your account"
        FontSize="13"
        HorizontalOptions="Center"
        TextColor="White"/>
        <Grid HeightRequest="193" Margin="0, 40, 0, 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="139"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <VerticalStackLayout Spacing="15" >
                <Frame
                    BackgroundColor="#1F1E29"
                    HeightRequest="55"
                    CornerRadius="12"
                    Padding="0"
                    BorderColor="Transparent"
                    Margin="0">
                    <Grid ColumnDefinitions="51, *" Padding="0">
                        <Label
                            Grid.Column="0"
                            FontFamily="FontelloFamily"
                            Text="&#xE801;"
                            FontSize="16"
                            VerticalTextAlignment="Center"
                            HorizontalTextAlignment="Center"    
                            TextColor="White"/>
                        <Entry
                            Grid.Column="1"
                            x:Name="txtUsername"
                            PlaceholderColor="#666666"
                            HeightRequest="55"
                            HorizontalOptions="Fill"
                            TextColor="White"
                            Text="{Binding GetUsername}"
                            Margin="-10,0,0,0"
                            FontSize="12"
                            Placeholder="Username"/>
                    </Grid>
                </Frame>
                <Frame
                    BackgroundColor="#1F1E29"
                    HeightRequest="55"
                    CornerRadius="12"
                    HorizontalOptions="FillAndExpand"
                    Padding="0"
                    BorderColor="Transparent"
                    Margin="0">
                    <Grid ColumnDefinitions="51, *">
                        <Label
                            Grid.Column="0"
                            FontFamily="FontelloFamily"
                            Text="&#xE800;"
                            FontSize="16"
                            WidthRequest="61"
                            VerticalTextAlignment="Center"
                            HorizontalTextAlignment="Center"
                            TextColor="White"/>

                        <Entry
                            Grid.Column="1"
                            x:Name="txtPassword"
                            PlaceholderColor="#666666"
                            HeightRequest="55"
                            HorizontalOptions="Fill"
                            TextColor="White"
                            IsPassword="True"
                            Text="{Binding GetPassword}"
                            FontSize="12"
                            Margin="-10, 0, 0, 0"
                            Placeholder="Password"/>

                    </Grid>
                </Frame>
            </VerticalStackLayout>
            <FlexLayout Grid.Row="1" Margin="0" JustifyContent="SpaceBetween" Padding="5,0,0,0">
                <Label 
                    Text="Forgot Password?" 
                    FontSize="14"
                    VerticalOptions="Center"
                    TextColor="White"
                    />
                <Button 
                    WidthRequest="130" 
                    FontSize="14" 
                    Text="Login"
                    TextColor="White"
                    BackgroundColor="#ff4654"
                    CornerRadius="12"
                    Command="{Binding GetUserDetails}"
                    />

            </FlexLayout>
        </Grid>
        <HorizontalStackLayout Margin="0, 80, 0,0" HorizontalOptions="Center">
            <Label
                Text="Create an account"
                TextTransform="Uppercase"
                TextDecorations="Underline"
                FontFamily="OpenSansSemibold"
                FontSize="24"
                TextColor="White"
                >
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
                </Label.GestureRecognizers>
            </Label>
        </HorizontalStackLayout>
    </VerticalStackLayout>

</ContentPage>
